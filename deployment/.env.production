# Configuración para OAuth en producción
# Copia este archivo a .env y completa con tus datos reales

# === MICROSOFT GRAPH API ===
CLIENT_ID=tu_application_client_id_aquí
CLIENT_SECRET=tu_application_client_secret_aquí  
TENANT_ID=tu_tenant_id_aquí
REDIRECT_URI=https://tu-dominio.com/callback

# === CONFIGURACIÓN DE LA APLICACIÓN ===
ENVIRONMENT=production
DEBUG=false

# === CONFIGURACIÓN DE ONEDRIVE ===
ONEDRIVE_FOLDER_PATH=/Casa

# === CONFIGURACIÓN DE STREAMLIT ===
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# === CONFIGURACIÓN DE SEGURIDAD ===
# Genera una clave secreta para la sesión
SESSION_SECRET=genera_una_clave_secreta_aleatoria_aquí

# === CONFIGURACIÓN DE LOGS ===
LOG_LEVEL=INFO
LOG_FILE=/app/logs/dashboard.log
